<div class="qr-display-container">
  <div class="qr-header">
    <h4><i class="bi bi-qr-code me-2"></i> Scan to Access</h4>
    <p class="text-muted">Use your mobile device to scan this QR code</p>
  </div>
  
  <div class="qr-code-container">
    <div class="qr-code pulse">
      <% if (typeof qrCode === 'string' && qrCode.trim().length > 0) { %>
        <pre><%= qrCode %></pre>
      <% } else { %>
        <div class="qr-placeholder">
          <i class="bi bi-qr-code" style="font-size: 5rem;"></i>
          <p>QR Code not available</p>
        </div>
      <% } %>
    </div>
    <div class="qr-overlay">
      <div class="qr-scanner-line"></div>
    </div>
  </div>
  
  <div class="qr-footer">
    <a href="<%= link %>" target="_blank" class="btn btn-primary mt-3">
      <i class="bi bi-box-arrow-up-right me-2"></i> Open Link Directly
    </a>
    <button class="btn btn-outline-secondary mt-3 ms-2 btn-copy" data-copy="<%= link %>">
      <i class="bi bi-clipboard me-1"></i> Copy Link
    </button>
  </div>
</div>

<style>
  .qr-display-container {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border-radius: var(--border-radius);
    padding: 1.5rem;
    text-align: center;
    color: white;
    margin-bottom: 1.5rem;
    box-shadow: var(--box-shadow);
    position: relative;
    overflow: hidden;
  }
  
  .qr-header {
    margin-bottom: 1rem;
  }
  
  .qr-header h4 {
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  
  .qr-header p {
    opacity: 0.8;
    margin-bottom: 0;
  }
  
  .qr-code-container {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto;
    background-color: white;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
  }
  
  .qr-code {
    position: relative;
    z-index: 1;
    background-color: white;
    color: black;
    font-size: 0.5rem;
    line-height: 0.75;
    overflow: hidden;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .qr-code pre {
    margin: 0;
    font-size: 0.55rem;
    line-height: 0.8;
    overflow: hidden;
  }
  
  .qr-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #aaa;
  }
  
  .qr-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
  }
  
  .qr-scanner-line {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: rgba(0, 102, 204, 0.5);
    box-shadow: 0 0 8px rgba(0, 102, 204, 0.8);
    animation: scanLine 2s linear infinite;
  }
  
  @keyframes scanLine {
    0% { top: 0; }
    50% { top: 100%; }
    51% { top: 0; }
    100% { top: 0; }
  }
  
  .qr-footer {
    margin-top: 1.5rem;
  }
  
  .dark-mode .qr-display-container {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  }
</style> 